{
    "env": {
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 11,
        "sourceType": "module"
    },
    "plugins": [
        "unicorn"
    ],
    "rules": {
        "unicorn/filename-case": "off",
        "object-curly-spacing": ["error", "always"],
        "no-console": "off",
        "camelcase": ["error", {"properties": "never"}],
        "no-var": "error",
        "indent": ["error", 2],
        "quotes": ["error", "single"],
        "semi": ["error", "always"]
    }
}
